    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize date picker with current date
            document.getElementById('date').valueAsDate = new Date();
            
            // Make book now buttons work
            document.querySelectorAll('.book-now').forEach(button => {
                button.addEventListener('click', function() {
                    const roomTitle = this.closest('.card').querySelector('.title').textContent;
                    window.location.href = `/booking?room=${encodeURIComponent(roomTitle)}`;
                });
            });
            
            // Make view all rooms button work
            document.querySelector('.view-rooms button').addEventListener('click', function() {
                window.location.href = '/rooms';
            });
        });
        
        function searchRooms() {
            const date = document.getElementById('date').value;
            const adults = document.querySelector('.guest-selection select:first-child').value;
            const children = document.querySelector('.guest-selection select:last-child').value;
            
            window.location.href = `/rooms?date=${date}&adults=${adults}&children=${children}`;
        }
    </script>
