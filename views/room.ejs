<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/room.css">
    <title>Room Listings</title>
</head>

<body>
    <%- include('header') %>

    <div class="container">
        <h1>Rooms Available</h1>

        <div class="rooms">
            <% if (rooms && rooms.length > 0) { %>
                <% rooms.forEach(room => { %>
                    <div class="room">
                        <img src="<%= room.image || '/images/placeholder.jpg' %>" alt="<%= room.type %>">
                        <h4><%= room.type %></h4>
                        <p class="desc"><%= room.description %></p>
                        <p class="guests">Up to <%= room.guests || 2 %> guests</p>
                        <p class="size"><%= room.size || 'N/A' %></p>
                        <p class="price">$<%= room.price || 0 %> / night</p>
                        <button class="view-details" data-roomid="<%= room._id %>">View Details â†’</button>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No rooms available.</p>
            <% } %>
        </div>
    </div>

    <script src="../js/room.js"></script>
    <%- include('footer') %>
</body>

</html>
